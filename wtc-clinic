CDIR=`readlink -f .`


case "$1" in
login)
    python3 $CDIR/authenticator/pass_auth.py
    ;;
register)
    python3 $CDIR/authenticator/new_user.py
    ;;


register)
    python3 $CDIR/authenticator/new_user.py
    ;;


login)
    python3 $CDIR/authenticator/pass_auth.py
    ;;


patient)
    case "$2" in 
    view)
        python3 $CDIR/functions/patients/view_patient_slots.py        
        ;;

    slots)
        python3 $CDIR/functions/patients/view_slots_for_patient_slots.py
        ;;

    signup)
        python3 $CDIRD/functions/patients/signup_to_patient_slot.py $3 $4
        ;;

    delete)
        python3 $CDIR/functions/patients/delete_patient_slots.py $3
        ;;
    esac
    ;;


clinician)
    
    case "$2" in
    view)
        python3 $CDIR/functions/clinicians/view_clinician_slots.py
        ;;

    create)
        python3 $CDIR/functions/clinicians/create_clinician_slot.py $3 $4
        ;;

    delete)
        python3 $CDIR/functions/clinicians/delete_clinician_slot.py $3
        ;;
    *) 
        echo "clinician menu:
        wtc-clinic clinician view           View clinician slots you created          
        wtc-clinic clinician create         Create a new clinician slot
        wtc-clinic clinician delete         Remove a clinician slot you made"        
        ;;
    esac
    ;;

*)
    echo "'wtc-clinic register'             For first time users 
'wtc-clinic login'                Login before each use. 

Clinician functionality:
        type: 'wtc-clinic clinician' into terminal
        
Patient functionality:
        type: 'wtc-clinic patient' into terminal "
;;
esac
    
